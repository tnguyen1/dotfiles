# Customize to your needs...
export EDITOR=vim
export PATH=$PATH:/usr/lib/lightdm/lightdm:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/local/games:$ANT_HOME/bin:$M2:$GRADLE_HOME/bin

# Ruby: http://cbednarski.com/articles/installing-ruby/
